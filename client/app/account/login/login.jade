div(ng-include='"components/navbar/navbar.html"')
.container.login
  .row
    .col-sm-12
      h1 Zaloguj

    .col-sm-12
      form.form.login-form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          label Email
          input.form-control(type='text', name='email', ng-model='user.email', required)
        .form-group
          label Hasło
          input.form-control(type='password', name='password', ng-model='user.password', required)

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
            | Pola email i hasło są wymagane.
          p.help-block {{ errors.other }}

        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Zaloguj
          = ' '
          a.btn.btn-default.btn-lg.btn-register(href='/signup')
            | Zarejestruj się

        hr

        div.o-auth
          a.btn.btn-facebook(href='', ng-click='loginOauth("facebook")')
            i.fa.fa-facebook
            |  Użyj Facebooka
          = ' '
          a.btn.btn-google-plus(href='', ng-click='loginOauth("google")')
            i.fa.fa-google-plus
            |  Użyj Google+
          = ' '
          a.btn.btn-twitter(href='', ng-click='loginOauth("twitter")')
            i.fa.fa-twitter
            |  Użyj Twittera
  hr
